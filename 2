        "üéà CURTIR": ["Curtir um filme/m√∫sica", "Curtir um p√¥r do sol", "Curtir uma comida gostosa", "Curtir um lazer simples", "Curtir ficar quieto sem culpa"],
        "‚ù§Ô∏è CUIDAR": ["Beber √°gua", "Tomar rem√©dios no hor√°rio", "Colorir a refei√ß√£o", "Fazer 3 min de respira√ß√£o", "Limpeza da alma (sil√™ncio/prece)"],
        "üìö CONHECER": ["Reconhecer pessoas 'invis√≠veis'", "Dar voz a porteiros/entregadores", "Ler p√°ginas de um livro", "Pesquisar curiosidade", "Aprender algo novo"],
        "üí¨ CONVERSAR": ["Mandar mensagem carinhosa", "Telefonar para algu√©m", "Conversar com vizinho/fam√≠lia", "Pedir ajuda (se precisar)", "Ouvir sem interromper"],
        "ü§ù COMPARTILHAR": ["Ajudar algu√©m com presen√ßa", "Visitar algu√©m", "Doar algo que n√£o usa", "Compartilhar uma hist√≥ria", "Solidariedade concreta"]
    };

    function render() {
        const data = document.getElementById('dataSel').value;
        const container = document.getElementById('lista-corpo');
        container.innerHTML = '';

        for (let v in verbos) {
            container.innerHTML += `<h2>${v}</h2>`;
            if (v.includes("CURTIR")) {
                container.innerHTML += `<button class="btn-sorteio" onclick="sortearLazer()">üé≤ SORTEIO DE LAZER</button>`;
            }
            verbos[v].forEach(t => {
                const id = `gpsVibrant_${data}_${t.replace(/\s+/g, '').substring(0,15)}`;
                const s = localStorage.getItem(id) || 'n';
                container.innerHTML += `
                    <div class="task-card">
                        <span class="task-title">${t}</span>
                        <div class="btn-group">
                            <button class="btn-opt f ${s==='f'?'active':''}" onclick="set('${id}','f')">Fiz</button>
                            <button class="btn-opt p ${s==='p'?'active':''}" onclick="set('${id}','p')">Parte</button>
                            <button class="btn-opt n ${s==='n'?'active':''}" onclick="set('${id}','n')">N√£o</button>
                        </div>
                    </div>`;
            });
        }
        calc();
    }

    function set(id, val) { localStorage.setItem(id, val); render(); }

    function calc() {
        let pts = 0;
        for (let i = 0; i < localStorage.length; i++) {
            const k = localStorage.key(i);
            if (k.startsWith('gpsVibrant_')) {
                const s = localStorage.getItem(k);
                pts += (s === 'f' ? 10 : s === 'p' ? 5 : 0);
            }
        }
        document.getElementById('total-pts').innerText = pts;
        const rank = pts > 1000 ? "MESTRE" : pts > 500 ? "ATIVO" : "INICIANTE";
        document.getElementById('rank-name').innerText = rank;
    }

    function sortearLazer() {
        const i = verbos["üéà CURTIR"];
        alert("üíé O SEU GPS SUGERE:\n\n" + i[Math.floor(Math.random()*i.length)].toUpperCase());
    }

    function tab(v) {
        ['view-hoje', 'view-mosaico', 'view-info'].forEach(id => document.getElementById(id).classList.add('hidden'));
        document.getElementById('view-' + v).classList.remove('hidden');
        document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
        document.getElementById('btn-' + v).classList.add('active');
        if(v === 'mosaico') renderMosaico();
    }

    function renderMosaico() {
        const grid = document.getElementById('grid-mosaico'); grid.innerHTML = '';
        const hoje = new Date();
        const diasMes = new Date(hoje.getFullYear(), hoje.getMonth() + 1, 0).getDate();
        for (let d = 1; d <= diasMes; d++) {
            const dataStr = `${hoje.getFullYear()}-${String(hoje.getMonth()+1).padStart(2,'0')}-${String(d).padStart(2,'0')}`;

            let pts
